---
import '@fontsource/pacifico';

interface Props {
	title?: string;
}

const { title = "TGW Hub" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--header-large: 40px;
		--header-medium: 30px;
		--header-small: 22px;
	}
	* {
		padding: 0;
		margin: 0;
		border: none;
		box-sizing: border-box;
		outline: none;
		font-family: Arial, Helvetica, sans-serif;
	}
	p {
		font-size: 18px;
		font-weight: 500;
	}
	a {
		text-decoration: none;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #e1e1e1;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.pacifico-cursive {
		font-family: 'Pacifico', cursive;
	}
	.page-header {
		text-transform: uppercase;
	}
</style>
